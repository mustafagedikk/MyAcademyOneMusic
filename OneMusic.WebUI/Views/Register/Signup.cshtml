@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>RegistrationForm_v5 by Colorlib</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="~/colorlib-regform-21/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/colorlib-regform-21/css/style.css">
</head>

<body>

    <div class="wrapper">
        <div class="inner">
            <form action="">
                <h3>Set The Event</h3>


                <div class="form-wrapper">
                    <label for="" class="label-input">Ad</label>
                    <input type="text" asp-for="Name" class="form-control">
                </div>
                <div class="form-wrapper">
                    <label for="" class="label-input">Soyad</label>
                    <input type="text" asp-for="Surname" class="form-control">
                </div>
                <div class="form-wrapper">
                    <label for="" class="label-input">E-Mail</label>
                    <input type="text" asp-for="Email" class="form-control">
                </div>
                <div class="form-wrapper">
                    <label for="" class="label-input">Kullanıcı Adı</label>
                    <input type="text" asp-for="UserName" class="form-control">
                </div>
                <div class="form-wrapper">
                    <label for="" class="label-input">Şifre</label>
                    <input type="text" asp-for="Password" class="form-control"></input>
                </div>

                <div class="form-wrapper">
                    <label for="" class="input">Şifre Tekrar</label>
                    <input type="text" class="form-control" asp-for="ConfirmPassword"></input>
                </div>

                <div style="text-align: center;">
                    <!-- Bu kısmı ekledik -->
                    <button>Kayıt ol</button>
                </div>
            </form>
            <div class="image-holder">
                <img src="https://w7.pngwing.com/pngs/121/588/png-transparent-rochefort-rock-en-seine-music-festival-concert-others-stage-performance-computer-wallpaper.png" style="width:530px;height:550px" alt="">
            </div>
        </div>
    </div>

    <script src="~/colorlib-regform-21/js/jquery-3.3.1.min.js"></script>
    <script src="~/colorlib-regform-21/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
