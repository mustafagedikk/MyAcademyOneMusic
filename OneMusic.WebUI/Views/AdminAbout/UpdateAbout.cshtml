@model About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Hakkımızda Alanı Güncelle</h1>

<form method="post">
    <input type="hidden" asp-for="AboutId"/>
    <label>Resim Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />

    <label>Açıklama</label>
    <textarea type="text" asp-for="Description" class="form-control"></textarea>
    <br />
    <button class="btn btn-outline-primary">Kaydet</button>

</form>
